{
  "collectionName": "coupons",
  "info": {
    "singularName": "coupon",
    "pluralName": "coupons",
    "displayName": "Coupon"
  },
  "attributes": {
    "code": { "type": "string", "unique": true },
    "description": { "type": "text" },
    "discount_type": {
      "type": "enumeration",
      "enum": ["percentage", "fixed"],
      "default": "percentage"
    },
    "discount_value": { "type": "float", "required": true },
    "minimum_amount": { "type": "float", "default": 0 },
    "usage_limit": { "type": "integer" },
    "used_count": { "type": "integer", "default": 0 },
    "is_active": { "type": "boolean", "default": true },
    "valid_from": { "type": "datetime" },
    "valid_until": { "type": "datetime" },
    "coupon_usages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::coupon-usage.coupon-usage",
      "mappedBy": "coupon"
    }
  }
}
