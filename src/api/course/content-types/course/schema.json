{
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "unique": true
    },
    "short_description": {
      "type": "text"
    },
    "description": {
      "type": "richtext"
    },
    "thumbnail_url": {
      "type": "media",
      "multiple": false,
      "required": false
    },
    "price": {
      "type": "decimal",
      "default": 0
    },
    "is_free": {
      "type": "boolean",
      "default": false
    },
    "difficulty_level": {
      "type": "enumeration",
      "enum": ["beginner", "intermediate", "advanced"],
      "default": "beginner"
    },
    "language": {
      "type": "string",
      "default": "en"
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "published", "archived"],
      "default": "draft"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category"
    },
    "course_sections": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::course-section.course-section",
      "mappedBy": "course"
    }
  }
}
