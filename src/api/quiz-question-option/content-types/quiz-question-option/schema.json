{
  "collectionName": "quiz_question_options",
  "info": {
    "singularName": "quiz-question-option",
    "pluralName": "quiz-question-options",
    "displayName": "Quiz Question Option"
  },
  "attributes": {
    "option_text": { "type": "string", "required": true },
    "is_correct": { "type": "boolean", "default": false },
    "order_index": { "type": "integer" },
    "question": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::quiz-question.quiz-question"
    },
    "quiz_attempt_answers": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::quiz-attempt-answer.quiz-attempt-answer",
      "mappedBy": "selected_option"
    }
  }
}
