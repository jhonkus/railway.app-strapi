{
  "collectionName": "course_sections",
  "info": {
    "singularName": "course-section",
    "pluralName": "course-sections",
    "displayName": "Course Section"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "order_index": {
      "type": "integer",
      "required": true
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "course": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course",
      "inversedBy": "course_sections"
    },
    "lessons": {
    "type": "relation",
    "relation": "oneToMany",
    "target": "api::lesson.lesson",
    "mappedBy": "section"
    }

  }
}
