{
  "collectionName": "quiz_questions",
  "info": {
    "singularName": "quiz-question",
    "pluralName": "quiz-questions",
    "displayName": "Quiz Question"
  },
  "options": { "draftAndPublish": false },
  "attributes": {
    "question_text": { "type": "text", "required": true },
    "question_type": {
      "type": "enumeration",
      "enum": ["multiple_choice", "true_false", "short_answer"],
      "default": "multiple_choice"
    },
    "order_index": { "type": "integer" },
    "points": { "type": "integer", "default": 1 },
    "explanation": { "type": "text" },
    "quiz": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::quiz.quiz"
    },
    "quiz_question_options": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::quiz-question-option.quiz-question-option",
      "mappedBy": "question"
    },
    "quiz_attempt_answers": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::quiz-attempt-answer.quiz-attempt-answer",
      "mappedBy": "question"
    }
  }
}
